<div class="row-fluid">
  <div class="span12">
    <h2>
      Lista de Usuarios
      <%= link_to administracion_new_path do%>
          <i class="icon-plus-sign"></i>
      <% end %>
    </h2>

    <br>

    <% if @users.blank? %>
        <h6>No se han encontrado usuarios</h6>
    <% else %>
        <table class='table table-striped table-bordered'>
          <tr>
            <th>Nombre</th>
            <th>Apellido Paterno</th>
            <th>Apellido Materno</th>
            <th>Tipo</th>
            <th>Activo?</th>
            <th>Acciones</th>
          </tr>
          <% @users.each do |user| %>
              <tr>
                <td><%= user.name %></td>
                <td><%= user.last_name1 %></td>
                <td><%= user.last_name2 %></td>
                <td><%= user.get_user_type_str %></td>
                <td>
                  <% if user.active? %>
                      <i class="icon-ok icon-black"></i>
                  <% else %>
                      <i class="icon-remove icon-black"></i>
                  <% end %>
                </td>
                <td>
                  <%= link_to administracion_edit_path(user) do%>
                      <i class="icon-pencil icon-black"></i>
                  <% end %> |
                  <%= link_to administracion_password_change_path(user) do%>
                      <i class="icon-edit icon-black"></i>
                  <% end %>
                </td>
              </tr>
          <% end %>
        </table>
        <%= will_paginate @users, renderer: BootstrapPagination::Rails %>
    <% end %>
  </div>
</div>