<h2>Agenda diaria</h2>

<div class="span8 agenda_selector_panel">
  <div class="row-fluid span5">
    <%= label_tag "zones_collection", "Zona", :class => "zone_label span3" %>
    <%= select_tag :zones_collection, options_for_select(@zones), :class => "span9" %>
  </div>
  <div class="row-fluid span5">
    <%= label_tag "sectors_collection", "Sector", :class => "sector_label span3" %>
    <%= select_tag :sectors_collection, options_from_collection_for_select(@sectors, "id", "name"), :class => "span9" %>
  </div>
</div>

<%= bootstrap_flash %>

<div class="agenda-container span12">
  <div class="span8">
       <div id="agenda"></div>
  </div>
  <div class="span4">
    <div id="calendar_for_agenda" class="datepicker span12"></div>
    <div>
        <% if Room.exist_requestable_rooms? %>
            <a href='<%=limpieza_new_cleanup_request_path%>' data-modal='true' class='btn span12'>
              <i class="icon-plus"></i> Agregar solicitud de limpieza
            </a>
        <%end%>

        <a href='<%= limpieza_print_cleanup_requests_path %>' data-modal='true' class='btn span12'>
          <i class="icon-print"></i> Imprimir tareas supervisor
        </a>
    </div>

    <div class="accordion" id="accordionExcel">
      <div class="accordion-group">
        <div class="accordion-heading">
          <a class="accordion-toggle" data-toggle="collapse" data-parent="#accordionExcel" href="#collapseOne">
            <i class="icon-print"></i> Importar Excel de altas
          </a>
        </div>
        <div id="collapseOne" class="accordion-body collapse">
          <div class="accordion-inner">
            <%= link_to 'Descargar Excel Base', '/Solicitudes_de_Limpieza.xlsx', :class=>'btn' %>
            <%= form_tag limpieza_import_excel_path, :multipart => true do %>
                <div class="control-group">
                  <%= label_tag :excel, 'Excel a importar', :class => "control-label" %>
                  <div class="controls">
                    <%= file_field_tag :excel, :required => true,
                                       :accept => 'application/vnd.ms-excel,application/vnd.openxmlformats-officedocument.spreadsheetml.sheet' %>
                  </div>
                </div>
                <%= submit_tag 'Importar', :class => 'btn btn-primary' %>
            <% end %>
          </div>
        </div>
      </div>
    </div>



  </div>
</div>
<% if @is_ajax_request %>
    <%= javascript_include_tag 'limpieza/agenda' %>
<% end %>