<html>
<head>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Agenda tareas <%= @date %></title>
  <%= stylesheet_link_tag 'application', :media => 'all' %>
  <style media="print">
    .noPrint {
        display: none;
    }
  </style>
</head>
<body>
<div class="container">
  <div class="row-fluid">
    <div class="span8">
        <h1>Resumen aseos para <%= @date %></h1>
        <p>
          <em>Documento autogenerado el <%= Time.current.strftime('%d-%m-%Y %H:%M')  %>.</em>
          <a href="#" class="btn noPrint" onclick="window.print()">Imprimir esta p√°gina</a>
        </p>
        <% @sectors.each do |s| %>
            <h2><%= s.name %></h2>
            <table class="table table-bordered table-condensed">
              <thead>
                <tr>
                  <th>Hora</th>
                  <th>Tipo</th>
                  <th>Sala</th>
                  <th>Comentarios</th>
                </tr>
              </thead>
              <tbody>
                <% if @cleanup_requests[s.id].length == 0 %>
                  <tr>
                    <td colspan="4"><em>No hay aseos agendados para este sector.</em></td>
                  </tr>
                <% end %>
                <% @cleanup_requests[s.id].each do |c| %>
                  <tr>
                    <td><%= c.started_at.strftime('%H:%M') %></td>
                    <td><%= c.get_request_type_str %></td>
                    <td><%= c.room.name %></td>
                    <td><%= c.start_comments %></td>
                  </tr>
                <% end %>
              </tbody>
            </table>
        <% end %>
    </div>
  </div>
</div>
</body>
</html>