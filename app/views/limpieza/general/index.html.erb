<div class="row-fluid">
    <div class="span6">
      <h3>Pr√≥ximos aseos terminales</h3>
      <% if @next_terminal_cleanups.blank? %>
          <h6>No hay aseos terminales programados para hoy</h6>
      <% else %>
          <table class="table table-striped table-bordered">
            <tr>
              <th>Hora</th>
              <th>Aseo</th>
            </tr>
            <% @next_terminal_cleanups.each do |tc_instance| %>
                <tr>
                  <td><%= tc_instance.get_formatted_datetime %></td>
                  <td><%= tc_instance.get_description %></td>
                </tr>
            <% end %>

            <tr>
              <td>12:00</td>
              <td>EJ:Limpieza en pabellones</td>
            </tr>
            <tr>
              <td>16:30</td>
              <td>EJ:Limpieza en maternidad</td>
            </tr>
          </table>
      <% end %>
    </div>
    <div class='span6'>
      <h3>Solicitudes de limpieza no finalizadas</h3>
      <% if @unfinished_cleanup_requests.blank? %>
          <h6>No hay solicitudes de limpieza pendientes</h6>
      <% else %>
          <table class="table table-bordered">
            <tr>
              <th>Sala</th>
              <th>Hora Solicitud</th>
              <th>Estado</th>
              <th>Acciones</th>
            </tr>

            <% @unfinished_cleanup_requests.each do |unfinished_cr| %>
                 <tr class='<%=unfinished_cr.get_priority_class %>'>
                  <td><%= unfinished_cr.room.name %></td>
                  <td><%= unfinished_cr.get_requested_at_time %></td>
                  <td><%= unfinished_cr.get_status_str %></td>
                  <td><%= link_to 'ver',limpieza_open_cleanup_request_path(:id => unfinished_cr.id),
                                  'data-toggle'=>"modal", 'data-target'=>"#modal-popup" %></td>
                </tr>
            <% end %>

            <tr class="priority-1">
              <td>EJ:101</td>
              <td>13:00</td>
              <td>En Limpieza</td>
            </tr>
            <tr class="priority-2">
              <td>EJ:402</td>
              <td>13:20</td>
              <td>Pendiente</td>
            </tr>
            <tr class="priority-3">
              <td>EJ:309</td>
              <td>13:12</td>
              <td>Pendiente</td>
            </tr>
          </table>
          <%= render 'shared/legend_priority' %>
      <% end %>
    </div>
</div>
<div class="row-fluid">
    <div class='span12'>
      <h3>Actividad reciente</h3>
      <% if @recent_activity.blank? %>
          <h6>No hay registros de actividad disponibles</h6>
      <% else %>
          <table class="table table-striped table-bordered">
            <% @recent_activity.each do |activity| %>
                <tr>
                  <td><%= activity.get_formatted_time %></td>
                  <td><%= activity.get_description %></td>
                </tr>
            <% end %>
            <tr>
              <td>EJ:13:20</td>
              <td>Se ingreso solicitud de limpieza para la sala 402</td>
            </tr>
            <tr>
              <td>EJ:13:12</td>
              <td>Se ingreso solicitud de limpieza para la sala 309</td>
            </tr>
            <tr>
              <td>EJ:13:00</td>
              <td>Se ingreso solicitud de limpieza para la sala 101</td>
            </tr>
          </table>
      <% end %>
    </div>
</div>
<%= link_to 'nueva',limpieza_new_cleanup_request_path,
            'data-toggle'=>"modal", 'data-target'=>"#modal-popup" %>
<%= render 'shared/modal_popup'%>