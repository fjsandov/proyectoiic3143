<h2>Vista de salas</h2>

<div class="span9 rooms_selector_panel">
  <div class="row-fluid span6">
    <%= label_tag "zones_collection", "Zona", :class => "zone_label span2" %>
    <%= select_tag :zones_collection, options_for_select(@zones), :class => "span6" %>
  </div>
  <div class="row-fluid span6">
    <%= label_tag "sectors_collection", "Sector", :class => "sector_label span2" %>
    <%= select_tag :sectors_collection, options_from_collection_for_select(@sectors, "id", "name"), :class => "span6" %>
  </div>
</div>

<%= bootstrap_flash %>

<div id="rooms_container" class="span12">
  <%= render 'shared/legend_room_status' %>
  <% for i in 0..(@rooms.size-1)/3 %>
      <div class="row-fluid">
      <% for pos in 3*i..3*i+2 %>
        <% if pos < @rooms.size %>
          <div class="span4">
            <a class="rooms_button status-<%= @rooms[pos].status %> span12" data-modal='true'
                 href="<%=url_room_by_status(@rooms[pos])%>">
              <%= @rooms[pos].name %>
            </a>
          </div>
        <% end %>
      <% end %>
      </div>
  <% end %>
</div>