<div class="modal-header">
  <h1>Editar Aseo Terminal</h1>
</div>
<%= form_for @terminal_cleanup, :url => limpieza_update_terminal_cleanup_path, :html => {:class => 'form-horizontal'} do |f| %>
    <div class="modal-body">
      <%= bootstrap_flash %>
      <%= render :partial => 'shared/model_errors', :object => @terminal_cleanup, :as => 'token' %>

      <%= f.hidden_field :id %>

      <div class="control-group">
        <%= label_tag :room_id, 'Sala', :class => 'control-label' %>
        <div class="controls">
          <%= f.collection_select :room_id, @requestable_rooms, :id, :name %>
        </div>
      </div>

      <div class="control-group">
        <%= f.label :start_date, 'Fecha inicio', :class => "control-label" %>
        <div class="controls">
          <div class="datetimepicker input-append date">
            <%= f.text_field :start_date, :value => @terminal_cleanup.start_date.strftime("%d-%m-%Y") %>
            <span class="add-on">
                      <i data-time-icon="icon-time" data-date-icon="icon-calendar"></i>
                </span>
          </div>
        </div>

      </div>

      <div class="control-group">
        <%= f.label :interval, 'Intervalo', :class => "control-label" %>
        <div class="controls">
          <%= f.number_field :interval, :min => 0 %>
          d√≠as
        </div>
      </div>

      <div class="control-group">
        <%= f.label :comments, 'Comentarios', :class => "control-label" %>
        <div class="controls">
          <%= f.text_area :comments %>
        </div>
      </div>
    </div>
    <div class="modal-footer">
      <%= f.submit 'Guardar cambios', :class => 'btn btn-primary' %>
      <%= link_to 'Cerrar', '#', :class => 'btn', 'data-dismiss' => 'modal' %>
    </div>
<% end %>