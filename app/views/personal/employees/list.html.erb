<div class="row-fluid">
    <div class="span12">
        <h2>
          Lista de Empleados
          <%= link_to personal_new_path do%>
              <i class="icon-plus-sign"></i>
          <% end %>
        </h2>

        <% if @employees.blank? %>
            <h6>No se han creado empleados</h6>
        <% else %>
            <table class='table table-striped table-bordered'>
                <tr>
                    <th>Nombre</th>
                    <th>Apellido Paterno</th>
                    <th>Apellido Materno</th>
                    <th>Cargo</th>
                    <th>Estado</th>
                    <th>Acciones</th>
                </tr>
              <% @employees.each do |employee| %>
                  <tr>
                    <td><%= employee.name %></td>
                    <td><%= employee.last_name1 %></td>
                    <td><%= employee.last_name2 %></td>
                    <td><%= employee.get_occupation %></td>
                    <td><%= employee.get_status %></td>
                    <td><%= link_to 'Editar', personal_edit_path(employee)%></td>
                  </tr>
              <% end %>

            </table>
        <% end %>
    </div>
</div>