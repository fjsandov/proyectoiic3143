<div class="row-fluid">
  <div class="span12">
    <ul class="breadcrumb">
      <li><a href=<%= personal_employees_list_path %>>Lista de Empleados</a> <span class="divider">/</span></li>
      <li class="active">Historial de Trabajo</li>
    </ul>
    <h3>
      Historial de Trabajo de <%= @employee.complete_name %>
    </h3>

    <% if @employee_work_history.blank? %>
        <div class="alert alert-info text-center">
            <h6>Empleado no tiene asistencias registradas</h6>
        </div>
    <% else %>
        <table class='table table-striped table-bordered'>
          <tr>
            <th>DÃ­a</th>
            <th>Hora inicio turno</th>
            <th>Hora fin turno</th>
            <th>Hora Llegada</th>
            <th>Hora Salida</th>
          </tr>
          <% @employee_work_history.each do |work_record| %>
              <tr>
                <td><%= work_record.get_formatted_date %></td>
                <td><%= work_record.get_formatted_entry_time %></td>
                <td><%= work_record.get_formatted_exit_time %></td>
                <td><%= work_record.get_formatted_start_time %></td>
                <td><%= work_record.get_formatted_end_time %></td>
              </tr>
          <% end %>
          <%= will_paginate @employee_work_history, renderer: BootstrapPagination::Rails %>
        </table>
    <% end %>
  </div>
</div>